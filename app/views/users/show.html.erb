

<h2>User info</h2>

<div class="profile-container">

  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <h3 class="profile-name">name   <%= @user.name %></h3>
  <h3 class="profile-introduction">introduction   <%= @user.introduction %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
  <% end %>
</div>

<%= form_with model:@book, local:true do |f| %>
  <h2>New Book</h2>
  <div class ="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class = "field">
  <label>Opinion</label>
  <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>

<% end %>

<!-- そのユーザーが投稿したデータを表示する-->
<h2>Books</h2>
<table>
  <thead>
    <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <body>
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
  </body>
</table>

