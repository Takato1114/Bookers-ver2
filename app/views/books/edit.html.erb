<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
<% if @book.errors.any? %>
    <h3 id ="error">入力した内容にerrorが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class = "field">
  <label>Title</label>
  <%= f.text_field :title ,value:@book.title %>
  </div>

  <div class = "field">
  <label>Body</label>
  <%= f.text_area :body ,value:@book.body %>
  </div>

  <div class = "field">
  <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "show", book_path(@book.id) %>
  <%= link_to "back", books_path %>
<% end %>